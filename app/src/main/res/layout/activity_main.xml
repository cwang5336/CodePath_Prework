<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/grey"
android:id="@+id/parent"
tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello from Cheng!"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="40sp"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_weight="1"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="50dp"
        android:hint="Enter your own text!"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        >



        <Button
            android:id="@+id/changeCustonTextButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:backgroundTint="#005073"
            android:text="Click to change to custom text"
            android:textColor="@color/white" />


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/changeTextButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/changeBackgroundButton"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:backgroundTint="#107dac"
            android:text="Click to change text"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical|center_horizontal"/>


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/changeBackgroundButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/textColorChangeButton"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:backgroundTint="#189ad3"
            android:text="Click to change background color"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/textColorChangeButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:backgroundTint="#1da8c1"
            android:text="Click to change text color"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical|center_horizontal"/>

    </LinearLayout>


</RelativeLayout>



